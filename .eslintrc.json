{
  "root": true,
  "ignorePatterns": [
    "dist/*",
    "node_modules/*",
    "jest.config.js",
    "webpack.config.js"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "react"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "@typescript-eslint/ban-ts-comment": "off"
  }
}
